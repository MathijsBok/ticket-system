# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/ticket_system?schema=public"

# Server
PORT=3001
NODE_ENV=development

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here
CLERK_WEBHOOK_SECRET=your_clerk_webhook_secret_here

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# CORS
FRONTEND_URL=http://localhost:5173

# SendGrid Email Configuration
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=support@yourdomain.com
SENDGRID_FROM_NAME=Support Team
SENDGRID_INBOUND_DOMAIN=reply.yourdomain.com
